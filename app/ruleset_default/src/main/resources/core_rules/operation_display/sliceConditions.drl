// -------------------------- SLICE CONDITION OPERATIONS ----------------------------
rule "'Add Slice Condition' - if not selected level predicate available"
    agenda-group "operation-display-determination"
when
    $model : OperationDisplayServiceModel(notSelectedSliceConditions.isEmpty() == false)
then
    insert(new Operation(EventNames.NAVIGATE_SLICE_CONDITION_NARROW, $model.getLocale(), 40));
end

