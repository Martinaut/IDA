rule "'Drop Slice Condition' - if at least one level predicate selected"
    agenda-group "operation-display-determination"
when
    $model : OperationDisplayServiceModel(selectedSliceConditions.isEmpty() == false)
then
    insert(new Operation(EventNames.NAVIGATE_SLICE_CONDITION_BROADEN, $model.getLocale(), 42));
end

