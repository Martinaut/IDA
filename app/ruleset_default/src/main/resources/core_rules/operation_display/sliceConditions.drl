rule "'Refocus Slice Condition' - if at least one selected an one not selected"
    agenda-group "operation-display-determination"
when
    $model : OperationDisplayServiceModel(sliceConditionRefocusDimensions.isEmpty() == false)
then
    insert(new Operation(EventNames.NAVIGATE_SLICE_CONDITION_REFOCUS, $model.getLocale(), 41));
end