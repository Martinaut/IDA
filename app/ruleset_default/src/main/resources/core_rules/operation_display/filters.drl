package core_rules.operation_display

// ------------------------------------ IMPORT --------------------------------------
import at.jku.dke.ida.shared.EventNames
import at.jku.dke.ida.shared.models.NonComparativeAnalysisSituation
import at.jku.dke.ida.shared.operations.Operation
import at.jku.dke.ida.rules.models.OperationDisplayServiceModel

// ------------------------------ FILTER OPERATIONS --------------------------------
rule "'Add Filter' - if at least one filter is available"
    agenda-group "operation-display-determination"
when
    $model : OperationDisplayServiceModel(notSelectedFilters.isEmpty() == false)
then
    insert(new Operation(EventNames.NAVIGATE_FILTER_NARROW, 60));
end

